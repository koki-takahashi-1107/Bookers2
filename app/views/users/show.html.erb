<% if @book.errors.any? %>
   <div class="error_explanation">
   <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
   <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
   </ul>
   </div>
<% end %>

<% if flash[:notice] %>
<p id="notice">
 <%= flash[:notice] %>
</p>
<% end %>
<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
    <h1>User info</h1>
    <div class="profile-container">
      <h3 class="profile-name"></h3>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
     <table class="table">
      <tr>
       <th>name</th><th><%= @user.name %></th>
      </tr>
      <tr>
       <th>introduction</th><th><%= @user.introduction %></th>
      </tr>
     </table>
     <div class="row">
      
     <%= link_to  edit_user_path(@user.id), class: "btn btn-outline-secondary" do %>
        <i class="fas fa-user-cog" aria-hidden="true" ></i>
     <% end %>
     </div>
    </div>
    <h2 class="mt-3">New book</h2>
    <%= form_with model:@book, url:books_path, local:true do |f| %>
    <div class="field">
       <%= f.label :title %>
       <%= f.text_field :title %>
    </div>
    <div class="field">
       <%= f.label :opinion %>
       <%= f.text_area :body %>
    </div>
    <div class="actions">

      <%= f.submit 'Create Book' %>
    </div>
    <% end %>
    <div class='col-md-8 offset-md-1'>
     <h2>Books</h2>
        <table class='table table-hover table-inverse'>
            <thead>
                <tr>
                 <th>Title</th>
                 <th>Opinion</th>
                 <th colspan="3"></th>
                </tr>
            </thead>
        </table>

         <table class='table'>
        <% @books.each do |book| %>
          <tr>
           <td><%= link_to user_path(book.user.id) do %>
            <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
            <% end %>
           </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
    </div>
  </div>
 </div>
</div>