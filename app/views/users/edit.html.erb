<h2>User info</h2>

<% if @user.errors.any? %>
  <div class="error_explanation">
   <h2><%= @user.errors.count %>rror prohibited this obj from being saved:</h2>
   <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
   </ul>
  </div>
  <% end %>

<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  <label for="inputImage">ProfileImage</label>
  <%= f.attachment_field :profile_image, placeholder: "Image" %>
  <label for="user_introduction">Introduction</label>
  <%= f.text_area :introduction %>
  <%= f.submit "Update User" %>
<% end %>