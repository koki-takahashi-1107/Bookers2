<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
   <h1>User info</h1>
    <div class="profile-container">
      <h3 class="profile-name"></h3>
      <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
     <table class="table">
      <tr>
       <th>name</th><th><%= current_user.name %></th>
      </tr>
      <tr>
       <th>introduction</th><th><%= current_user.introduction %></th>
      </tr>
     </table>
      <div class="row">
       <%= link_to  edit_user_path(current_user), class: "btn btn-outline-secondary" do %>
        <i class="fas fa-user-cog" aria-hidden="true" ></i>
       <% end %>
      </div>
    </div>

    <h2 class="mt-3">New book</h2>
    <%= form_with model:@book, url:books_path, local:true do |f| %>
    <div class="field">
       <%= f.label :title %>
       <%= f.text_field :title %>
    </div>
    <div class="field">
       <%= f.label :opinion %>
       <%= f.text_area :body %>
    </div>
    <div class="actions">

      <%= f.submit 'Create Book' %>
    </div>
    <% end %>
  </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
       <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
         <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
         <% end %>
         </tbody>
        </table>
     </div>
   </div>
  </div>