   <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
   <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
   </ul>
   </div>
<% end %>

<% if flash[:notice] %>
<p id="notice">
 <%= flash[:notice] %>
</p>
<% end %>
<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
   <h1>User info</h1>
   <div class="profile-container">
     <h3 class="profile-name"></h3>
     <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
    <table class="table">
     <tr>
      <th>Title</th><th><%= @user.name %></th>
     </tr>
     <tr>
      <th>introduction</th><th><%= @user.introduction %></th>
     </tr>
    </table>
   <div class="row">
    <%= link_to  edit_user_path(@user.id), class: "btn btn-outline-secondary" do %>
       <i class="fas fa-user-cog" aria-hidden="true" ></i>
       <% end %>
   </div>
   </div>
 <h2 class="mt-3">New book</h2>
  <%= form_with model:@newbook, url:books_path, local:true do |f| %>
 <div class="form-group">
   <label><%= f.label :title %></label>
   <label><%= f.text_field :title %></label>
 </div>
 <div class="form-group">
   <%= f.label :opinion %>
   <%= f.text_area :body %>
 </div>
 <div class="actions">
  <%= f.submit 'Create Book' %>
 </div>
 <% end %>
 </div>
 <div class="col-md-8 offset-md-1">
  <h1>Book detail</h1>
  <table class='table table-hover table-inverse'>
   <tr>
     <td><%= link_to user_path(@book.user.id) do %>
     <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></br>
     <%= @user.name %>
     <% end %>
     </td>
     <td><%= link_to @book.title, book_path(@book) %></td>
     <td><%= @book.body %></td>
     <td><% if @book.user == current_user %>
         <%= link_to "Edit", edit_book_path(@book.id) %>  <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？" %>
         <% end %>
     </tb>
   </tr>
   <tr>
  </table>
  </div>
 </div>
</div>

